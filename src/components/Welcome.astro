---
import { Button } from "@/components/ui/button";
---

<div class="min-h-screen flex items-center justify-center bg-background">
	<main class="text-center max-w-2xl px-8">
		<div class="inline-flex w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-xl items-center justify-center mb-8 shadow-lg shadow-blue-500/30">
			<span class="text-white text-2xl font-bold tracking-tight">M</span>
		</div>
		<h1 class="text-5xl font-extrabold text-foreground mb-4 tracking-tight leading-tight">
			make.inc
		</h1>
		<h2 class="text-2xl font-semibold text-muted-foreground mb-6 leading-relaxed">
			This is a starter template.
		</h2>
		<p class="text-lg text-muted-foreground leading-relaxed max-w-md mx-auto mb-8">
			Your AI agent is working and you should see changes soon.
		</p>
		<div class="flex gap-4 justify-center">
			<Button size="lg" client:load>Get Started</Button>
			<Button variant="outline" size="lg" client:load>Learn More</Button>
		</div>
	</main>
</div>
